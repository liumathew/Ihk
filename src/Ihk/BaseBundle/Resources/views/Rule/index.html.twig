{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Rule list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Dayinweek</th>
                <th>Starttime</th>
                <th>Endtime</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('rule_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.dayInWeek }}</td>
                <td>{{ entity.starttime | date('H:i:s') }}</td>
                <td>{{ entity.endtime | date('H:i:s') }}</td>
                <td>{{ entity.address }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('rule_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('rule_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('rule_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
