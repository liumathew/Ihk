</head>
<body>
<header>
	<div class="logo">
		I Home Kitchen
	</div>
	<div class="user-action">
		{% if is_granted("IS_AUTHENTICATED_FULLY") %}
		Welcome {{ app.user.username }}
		<a href="{{ path('fos_user_security_logout') }}">Logout</a>
		{% else %}
		<a href="{{ path('fos_user_security_login') }}">Login</a>
		{% endif %}
	</div>
</header>
<div id="container">

	<div id="left-area">
		{% block leftarea %}

