<!DOCTYPE html>
<html>
<head>
	<title>
		{% block title %}
			I Home Kitchen
		{% endblock %}
	</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('bundles/ihkbase/css/base.css') }}" type="text/css" media="all" />
		<link rel="stylesheet" href="{{ asset('bundles/ihkbase/css/jquery-ui.css') }}" type="text/css" media="all" />
	{% endblock %}
	{% block javascripts %}
		<script src="http://code.jquery.com/jquery-latest.min.js"></script>
		<script src="http://unslider.com/unslider.min.js"></script>
	{% endblock %}
	{#<link rel="shortcut icon" href="{{ asset('bundles/ihkbase/images/favicon.ico') }}" />#}
</head>
<body>
<header>
	<div class="logo">
		I Home Kitchen
	</div>
	<div class="user-action">
		{% if is_granted("IS_AUTHENTICATED_FULLY") %}
		Welcome {{ app.user.username }}
		<a href="{{ path('fos_user_security_logout') }}">Logout</a>
		{% else %}
		<a href="{{ path('fos_user_security_login') }}">Login</a>
		{% endif %}
	</div>
</header>
<div id="container">

	<div id="left-area">
		{% block leftarea %}

		{% endblock %}
	</div>

	<div id="right-area">
		{% block rightarea %}

		{% endblock %}
	</div>

</div>
<footer>
	{#<div class="content">#}
                   {#<span class="symfony">#}
                       {#&#123;&#35;<img src="{{ asset('bundles/ibwjobeet/images/jobeet-mini.png') }}" />&#35;&#125;#}
					   {#powered by <a href="http://www.symfony.com/">#}
						   {#&#123;&#35;<img src="{{ asset('bundles/ibwjobeet/images/symfony.gif') }}" alt="symfony framework" />&#35;&#125;#}
					   {#</a>#}
                   {#</span>#}
		{#<ul>#}
			{#<li><a href="">About IHomeKitchen</a></li>#}
			{#<li class="last"><a href="">Affiliates</a></li>#}
		{#</ul>#}
	{#</div>#}
</footer>
</body>
</html>